# syntax=docker/dockerfile:1.7

# ============================
# 1) Build Stage
# ============================
FROM gradle:8.7-jdk17 AS builder
WORKDIR /workspace

COPY gradlew gradlew
COPY gradle gradle
COPY build.gradle settings.gradle ./
COPY src src
#COPY m2 /home/gradle/.m2
#RUN chown -R gradle:gradle /home/gradle/.m2

